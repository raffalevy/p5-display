{
    "compilerOptions": {
        "outDir": "./dist/",
        "declarationDir": "./dist/typings/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "jsx": "react",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "allowSyntheticDefaultImports": true,
        // "emitDeclarationOnly": true,
        "types": [],
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    }
}